<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.njitradio.mymusicradio.CreateRadio">

<LinearLayout
    android:layout_height="0dp"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">
    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:text="Create Station for Top 40"
        android:id="@+id/button_station"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight ="true"/>

    <ImageButton
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/button_stop"
        android:src="@drawable/button_stop"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_gravity="right" />

</LinearLayout>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    <Button
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Create Station for Pop Songs"
        android:id="@+id/button_station2"
        android:layout_below="@+id/button_station"
        />

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/button_stop1"
            android:src="@drawable/button_stop"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp"
            android:layout_gravity="right" />

    </LinearLayout>

</LinearLayout>
